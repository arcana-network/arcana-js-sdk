{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2018"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
